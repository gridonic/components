{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "lib": [ "dom", "es6" ],
    "types": ["mocha"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "strict": true
  }
}